{
	"apiVersion": 2,
	"name": "core/post-excerpt",
	"title": "Post Excerpt",
	"category": "design",
	"description": "Display a post's excerpt.",
	"textdomain": "default",
	"attributes": {
		"textAlign": {
			"type": "string"
		},
		"wordCount": {
			"type": "number",
			"default": 55
		},
		"moreText": {
			"type": "string"
		},
		"showMoreOnNewLine": {
			"type": "boolean",
			"default": true
		}
	},
	"usesContext": [ "postId", "postType" ],
	"supports": {
		"html": false,
		"color": {
			"gradients": true,
			"link": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"editorStyle": "wp-block-post-excerpt-editor",
	"style": "wp-block-post-excerpt"
}
